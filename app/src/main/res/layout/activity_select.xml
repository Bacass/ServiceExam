<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SelectActivity"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnThreadActivity"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="쓰레드 액티비티"/>

        <Button
                android:id="@+id/btnServiceActivity01"
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="서비스 액티비티"/>

        <Button
                android:id="@+id/btnServiceActivity02"
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="인텐트 서비스 액티비티"/>

        <Button
                android:id="@+id/btnServiceActivity03"
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="포그라운드 서비스 액티비티"/>

    </LinearLayout>

</layout>